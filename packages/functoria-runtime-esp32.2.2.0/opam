tags:         ["org:mirage"]

build: [
  ["env" "OCAMLFIND_TOOLCHAIN=esp32" "jbuilder" "subst"] {pinned}
  ["env" "OCAMLFIND_TOOLCHAIN=esp32" "jbuilder" "build" "-p" "functoria-runtime" "-j" jobs]
]

# do not run the tests in parallel as it uses side-effects
build-test: ["jbuilder" "runtest" "-p" "functoria-runtime" "-j" "1"]

depends: [
  "jbuilder" {build & >="1.0+beta10"}
  "cmdliner-esp32" {>= "0.9.8"}
  "fmt-esp32"
  "functoria" {test & >= "2.2.0"}
  "alcotest"  {test}
]
available: [ocaml-version >= "4.02"]

install: [["opam-installer" "--prefix=%{prefix}%/esp32-sysroot" "functoria-runtime.install"]]