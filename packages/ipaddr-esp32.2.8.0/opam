]

build: [
  ["jbuilder" "subst"] {pinned}
  ["env" "OCAMLFIND_TOOLCHAIN=esp32" "jbuilder" "build" "-p" "ipaddr" "-j" jobs ]
]
build-test: [ "jbuilder" "runtest" "-p" name "-j" jobs ]

depends: [
  "jbuilder" {build & >="1.0+beta7"}
  "base-bytes"
  "ppx_sexp_conv-esp32" {build & >="v0.9.0"}
  "sexplib-esp32"
  "ounit" {test}
]
depopts: [ "base-unix" ]
available: [ ocaml-version >= "4.03.0" ]
install: [
  ["opam-installer" "ipaddr-esp32.install"]
  ["mv" "%{prefix}%/esp32-sysroot/lib/ipaddr-esp32" "%{prefix}%/esp32-sysroot/lib/ipaddr"]
]
patches: ["lib/jbuild.patch"]