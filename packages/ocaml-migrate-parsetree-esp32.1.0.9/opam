  src:
    "https://github.com/ocaml-ppx/ocaml-migrate-parsetree/releases/download/v1.0.9/ocaml-migrate-parsetree-1.0.9.tbz"
}

install: [["opam-installer" "--prefix=%{prefix}%/esp32-sysroot" "ocaml-migrate-parsetree.install"]]